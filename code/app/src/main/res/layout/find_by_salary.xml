<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="700dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="72dp"
        android:layout_marginRight="8dp"
        android:textColor="#003366"
        android:text="Tìm kiếm theo lương"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textStyle="bold"
       />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="88dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/textView7"
        android:text="Nhập lương:"
        android:textSize="28dp"
        android:textStyle="bold"
       />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="28dp"
        android:layout_below="@id/textView11"
        android:layout_marginTop="84dp"

        android:text="Từ:"
        android:textSize="28dp"
        />

    <EditText
        android:id="@+id/editTextluong1"
        android:layout_width="183dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="40dp"
        android:layout_marginTop="76dp"

        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:layout_below="@id/textView11"
        android:layout_toRightOf="@id/textView12"
        />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView11"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="85dp"
        android:layout_toRightOf="@id/editTextluong1"
        android:text="đồng/giờ"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/textView13"
        android:layout_marginTop="52dp"
        android:text="Đến:"
        android:textSize="28dp"
       />

    <EditText
        android:id="@+id/editTextluong2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView13"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/textView14"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView13"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/editTextluong2"
        android:layout_marginTop="50dp"
        android:text="đồng/giờ"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/buttonFindSalary"
        android:layout_width="130dp"
        android:layout_toRightOf="@+id/textView14"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView15"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_button2"
        android:text="Tìm kiếm"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonCancelSalary"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView15"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/buttonFindSalary"
        android:background="@drawable/ic_button2"
        android:text="Hủy"
        android:textStyle="bold" />


</RelativeLayout>